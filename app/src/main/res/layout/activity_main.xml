<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008000"
    tools:context="edu.fsu.cs.mobile.mobileprogrammingproject.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_frame"
        android:background="@color/gradient"
        android:name="edu.fsu.cs.mobile.mobileprogrammingproject.ProfileFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:tag="profileTag"></FrameLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:background="#008000"
        android:layout_height="?attr/actionBarSize"
        />

</RelativeLayout>
