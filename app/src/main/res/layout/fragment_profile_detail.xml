<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileDetailFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/major_Edittext"
        app:layout_constraintTop_toTopOf="@+id/major_Edittext"
        android:focusable="true">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:layout_width="0dp"
            android:layout_height="580dp"
            android:contentDescription="@string/gradient_stuff"
            android:src="@color/gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.538" />

        <Button
            android:id="@+id/friendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_friend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="451dp" />

        <TextView
            android:id="@+id/majortextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="168dp"
            android:text="@string/major"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="49dp" />

        <TextView
            android:id="@+id/classesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="Classes"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="104dp" />

        <TextView
            android:id="@+id/yearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="128dp"
            android:text="Gradutaing Year"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="167dp" />

    </android.support.constraint.ConstraintLayout>


</FrameLayout>